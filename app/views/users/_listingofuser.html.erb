<h1 style="margin-left: 600px;margin-top: 50px;">All Users</h1>

<table class="table" style="height: auto;width: 70%;margin-left: 200px">
  <thead>
  <tr>
    <th scope="col">Title</th>
    <th scope="col">Actions</th>

  </tr>
  </thead>
  <tbody >
  <% obj.each do |user| %>
    <tr>
      <td style=""><%=link_to user.username,user_path(user),:style => 'text-decoration: none;color: black;font-size:30px;text-transform:uppercase;background-color:none;' %></td>

      <td><!-- Example split danger button -->
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-target="#dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Action
          </button>
          <ul class="dropdown-menu dm-list" aria-labelledby="dropdownMenuButton1">

              <li><%=link_to 'Show',user_path(user),class: 'dropdown-item' %></li>
              <li><%= link_to "Update",edit_user_path(user) ,class: 'dropdown-item'%></li>
              <li><%= button_to "Destroy", user, method: :delete,class: 'dropdown-item'%></li>
          </ul>
        </div>
        <!--             <button type="button" class="btn btn-secondary"><%#= link_to "Destroy", post, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },:style => 'text-decoration:none; color:white' %></button>-->
        <!--             <button type="button" class="btn btn-secondary ms-5"><%#= link_to "Update",edit_post_path(post) ,:style => 'text-decoration:none;color:white' %></button>-->

      </td>

    </tr>
  <% end %>
  </tbody>
</table>

<div style="position:relative;left: 45%">

  <%= will_paginate @articles%>


</div>