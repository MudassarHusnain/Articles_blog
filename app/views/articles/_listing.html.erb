<h1 style="margin-left: 600px;margin-top: 50px;">All Articles</h1>

<table class="table" style="height: auto;width: 70%;margin-left: 200px">
  <thead>
  <tr>
    <th scope="col">Title</th>
    <th scope="col">Actions</th>

  </tr>
  </thead>
  <tbody >
  <% obj.each do |article| %>
    <tr>
      <td style=""><%=link_to article.title,article_path(article),:style => 'text-decoration: none;color: black;font-size:30px;text-transform:uppercase;background-color:none;' %></td>

      <td><!-- Example split danger button -->
        <div class="dropdown">
          <button class="btn btn-secondary dropdown-toggle" type="button" data-target="#dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Action
          </button>
          <ul class="dropdown-menu dm-list" aria-labelledby="dropdownMenuButton1">
            <li><%=link_to 'Show',article_path(article),class: 'dropdown-item' %></li>
            <% if current_user.id == article.user_id %>
              <li><%= link_to "Update",edit_article_path(article) ,class: 'dropdown-item'%></li>
              <li><%= button_to "Destroy", article, method: :delete,class: 'dropdown-item'%></li>
            <% elsif current_user.admin==true%>
              <li><%= button_to "Destroy", article, method: :delete,class: 'dropdown-item'%></li>
            <% end %>
          </ul>
        </div>
        <!--             <button type="button" class="btn btn-secondary"><%#= link_to "Destroy", post, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },:style => 'text-decoration:none; color:white' %></button>-->
